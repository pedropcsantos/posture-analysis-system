# Exemplo de arquivo de configuração de ambiente
# Copie este arquivo para .env e ajuste os valores conforme necessário

# Configurações do Servidor
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
FLASK_DEBUG=False
SECRET_KEY=posture_analyzer_secret

# Configurações da Câmera RealSense
CAMERA_WIDTH=640
CAMERA_HEIGHT=480
CAMERA_FPS=30

# Configurações do Banco de Dados
DATABASE_PATH=posture_system.db

# Configurações de Calibração
CALIBRATION_FRAMES_PHASE1=30
CALIBRATION_FRAMES_PHASE2=90

# Configurações de Detecção de Postura
# Limiares de ângulos (em graus)
PITCH_THRESHOLD_LIGHT=10
PITCH_THRESHOLD_MODERATE=20
YAW_THRESHOLD=10
ROLL_THRESHOLD=5
TRUNK_PITCH_THRESHOLD_LIGHT=5
TRUNK_PITCH_THRESHOLD_MODERATE=20
TRUNK_ROLL_THRESHOLD=5

# Limiares de ombros
ELEVATION_MEAN_THRESHOLD=0.03
ELEVATION_DIFF_THRESHOLD=0.05

# Filtros
EMA_ALPHA=0.25
MEDIAN_FILTER_WINDOW=5

# Persistência de alertas (frames)
PERSIST_FRAMES=10

# Configurações de Telemetria
READINGS_BUFFER_SIZE=30

# Logging
LOG_LEVEL=INFO
